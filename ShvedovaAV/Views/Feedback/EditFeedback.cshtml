@{
    @model ShvedovaAV.ViewModels.FeedbackViewModel
    ViewBag.Title = "Редактирование отзыва";
}

<h2>Редактирование отзыва</h2>

<form asp-action="EditFeedback" asp-controller="Feedback" method="post" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <p>
        <label asp-for="AuthorName">Автор</label><br />
        <input asp-for="AuthorName" />
         <span asp-validation-for="AuthorName"></span>
    </p>
    <p>
        <label asp-for="Text">Текст</label><br />
        <textarea asp-for="Text" style="height:300px;width:500px"></textarea>
         <span asp-validation-for="Text"></span>
    </p>
    <p>
        <label asp-for="Image">Изображение</label><br />
        <input asp-for="Image" type="hidden"/>
        <img src="~/@Model.Image" width="240" height="130"/><br />
        <label asp-for="ImageFile">Изменить изображение</label><br />
        <input asp-for="ImageFile" type="file"/>
         <span asp-validation-for="ImageFile"></span>
    </p>
    
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>
