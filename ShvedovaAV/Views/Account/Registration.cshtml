@{
    @model ShvedovaAV.ViewModels.RegistrationViewModel
    ViewBag.Title = "Регистрация";
}
<div class="container text-center">
<h2>Регистрация</h2>

<form asp-action="registration" asp-controller="account" method="post">
    <p>
        <label asp-for="Name">Имя</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </p>
    <p>
        <label asp-for="Email">Email</label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </p>
     <p>
        <label asp-for="Password">Пароль</label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </p>
     <p>
        <label asp-for="PasswordConfirm">Подтверждение пароля</label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </p>
    
    <p>
        <input type="submit" value="Зарегистрироваться" />
    </p>
</form>
</div>