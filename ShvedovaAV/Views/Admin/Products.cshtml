@model IEnumerable<ShvedovaAV.Models.Product>
@{
    ViewBag.Title = "Курсы";
}

<table class="table">
     <tr><th>Имя</th><th>Описание</th><th>Цена</th><th>Категория</th><th>Картинка</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Category</td>
            <td><img src="@item.Image" width="240" height="130"></img></td>
            <td><a asp-action="EditProduct" asp-route-id="@item.Id"><input type="button"  value="Редактировать"/></a></td>
            <td>
            <form asp-action="DeleteProduct" asp-route-id="@item.Id" method="post">
                <input type="submit"  value="Удалить"/>
            </form>
            </td>
        </tr>
    }
</table>
<a asp-action="AddProduct"><input type="button"  value="Добавить"/></a>

