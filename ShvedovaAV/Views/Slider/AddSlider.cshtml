@{
    @model ShvedovaAV.ViewModels.SliderViewModel
    ViewBag.Title = "Добавление слайдера";
}

<h2>Добавление слайдера</h2>

<form asp-action="AddSlider" asp-controller="Slider" method="post" enctype="multipart/form-data">
    <p>
        <label asp-for="Name">Имя</label><br />
        <input asp-for="Name" />
         <span asp-validation-for="Name"></span>
    </p>
    <p>
        <label asp-for="Description">Описание</label><br />
        <textarea asp-for="Description" style="height:300px;width:500px"></textarea>
         <span asp-validation-for="Description"></span>
    </p>
     <p>
        <label asp-for="Price">Цена</label><br />
        <input asp-for="Price" />
         <span asp-validation-for="Price"></span>
    </p>
    <p>
        <label asp-for="ImageFile">Изображение</label><br />
        <input asp-for="ImageFile" type="file"/>
         <span asp-validation-for="ImageFile"></span>
    </p>
    
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>
