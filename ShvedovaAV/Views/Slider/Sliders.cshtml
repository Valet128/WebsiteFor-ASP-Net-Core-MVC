@model IEnumerable<ShvedovaAV.Models.Slider>
@{
    ViewBag.Title = "Слайдеры";
}

<table class="table">
     <tr><th>Название</th><th>Картинка</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td><img src="~/@item.Image" width="240" height="130"></img></td>
            <td><a asp-action="EditSlider" asp-route-id="@item.Id"><input type="button"  value="Редактировать"/></a></td>
            <td>
            <form asp-action="DeleteSlider" asp-route-id="@item.Id" method="post">
                <input type="submit"  value="Удалить"/>
            </form>
            </td>
        </tr>
    }
</table>
<a asp-action="AddSlider" asp-controller="Slider"><input type="button"  value="Добавить"/></a>

